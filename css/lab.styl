						text-align center
						width 100% 
						height 100%
						line-height 50px
						display block
						text-decoration none
						position relative
						font-size 11px
						color #1e1e1e
						text-transform uppercase
						border-left 2px solid #f2f2f2
						
						z-index 1
						overflow hidden

						&:after
							transition 0.4s ease-out
							content " "
							width 0
							height 100px
							position absolute
							left 50%
							top -25px
							background-color #f2f2f2
							z-index -1
							transform rotate(10deg)
							opacity 0

						&:hover
							color #080130
							&:after
								opacity 1
								width 110%
								left -5%

		ul#projects_menu
			opacity 0
			transition 0.4s ease-out 
			width 100%
			height 200px
			position absolute
			bottom -145px
			left 0
			display block
			background-color #000728
			border-top 1px solid #FFF
			
			&.active
				opacity 1
				bottom 55px


	section#container		
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color #080130
		background-image url(../img/lab-bg.jpg)
		background-size cover
		overflow hidden

		&:before
			transition 1s
			content "loading"
			position absolute
			left 0
			top 0
			width 100% 
			height 100%
			background-color #080130
			display block
			opacity 0

		&.bg_cover:before
			opacity 1

		#stage
			transition:1s ease-out;
			top:40px;
			text-align: center;
			width: 100%;
			max-height: 350px;
			
			>div 
				transition 1s ease-in-out
				display: inline-block;
				height: 100%;
				width: 160px;
				vertical-align: top;
				position: relative;
				transition:0.4s;
				margin: 0 -2px;

				animation-delay: 2s;

				// name
				// &:after
				// 	transition 0.4s ease-in-out
				// 	content "enter"
