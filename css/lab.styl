				for num in (1..4)
						&:nth-child({num})
							>span
								animation bob 1.3s infinite ease-in-out alternate 0.5s*num
								
								
				

				>span
					position: absolute;
					display: inline-block;
					width: 140px;
					left: 10px;
					

					&.dot
						transition 4s ease-out
						height 140px
						background-color rgba(255,255,255,0.1)
						top 40%
						opacity 0
						border-radius 50%

						border 1px dotted rgba(255,255,255, 0)
						background-size 80px 80px
						background-image url(../img/icon.svg)
						background-repeat no-repeat
						background-position center


						&:after
							// transition 0.3s ease-in-out
							transition 0.3s ease-in-out
							content ""
							position absolute
							top -1px
							left -1px
							width 140px
							height 140px
							display block
							opacity 0
							border 1px dashed #FFF
							border-radius 50%
							animation spin 40s infinite linear
							
							

						&:before
							transition 1s ease-in-out
							content ""
							position absolute
							top -1px
							left -1px
							width 140px
							height 140px
							display block
							opacity 0.4
							border 1px solid #FFF
							border-radius 50%
							animation spin 10s infinite linear


							@keyframes spin {
								from {
								    transform rotate(0deg)
								}
								to {
								    transform rotate(360deg)
								}
							}


					
					&.shadow
						transition 0.3s ease-out 
						height 15px
						width 100px
						left 30px
						background-color  rgba(0, 1, 26, 1)
						bottom 35%
						border-radius 50% 
						opacity 0
						filter blur(5px)
			
			&.active
				>div
					for num in (1..4)
						&:nth-child({num})
							>span
								transition all 0.8s cubic-bezier(0.310, 1.530, 0.660, 1.000); /* custom */
								transition-delay 0.1s*num
								&.dot
									opacity 1
									top 20%
								&.shadow
									bottom:27%;
									opacity 0.1
					
					&:hover
						margin auto 40px

						>span.dot
							transition all 0.4s ease-in-out
							// transform translate3d(0px, -15%, 0px)
							border 1px dotted rgba(255,255,255, 0.5)
							background-color rgba(255,255,255,0.0)

							&:before
								opacity 0.3
								top -1px
								left 39px
								width 60px
								height 140px

							&:after
								opacity 0.6
								top -6px
								left -6px
