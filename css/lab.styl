			transform translate3d(0px, 0px, 0px)
			

	#caption
		transition 0.3s ease-out 
		bottom 0
		top 380px
		width 80%
		max-width 550px
		height 80px
		display block
		text-align center
		color #FFF
		line-height 20px
		letter-spacing 1px
		opacity 0
		transform translate3d(0px, 20px, 0px)
		
		animation bob_text 2s infinite ease-in-out alternate
		
		

		@keyframes bob {
			0% {
				// color: red;
				transform translate3d(0px, -4px, 0px)
			}
			100% {
				// color: gray;
				transform translate3d(0px, 4px, 0px)
			}
		}
		

		&.active
			opacity 0.9
			transform translate3d(0px, 0px, 0px)

	
		

	nav#main_menu
			transition 1s ease-in-out 
			position absolute 
			bottom -10px 
			left 0 
